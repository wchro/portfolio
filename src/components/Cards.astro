---
import Icons from './Icons.astro'
import Badges from './Badges.astro'

interface Props {
    icon?: string,
    title: string,
    description: string,
    tags?: Array<any>,
    buttons?: Array<any>

}

const { icon = '', title, description, tags = [], buttons } = Astro.props
---

<div class="rounded-lg border text-card-foreground shadow-sm bg-zinc-800/50 border-zinc-700 w-full md:w-92 xl:w-102 2xl:w-108">
    <div class="p-6">
        <div class="h-12 w-12 rounded-lg bg-emerald-500/10 flex items-center justify-center mb-6">
                    <Icons name={icon} />
                  </div>
                  <h3 class="text-xl font-bold mb-2">{title}</h3>
                  <p class="text-zinc-400 mb-4">
                    {description}
                  </p>
                  {tags.map((tag) => <Badges title={tag} />)}
                  
    </div>
</div>